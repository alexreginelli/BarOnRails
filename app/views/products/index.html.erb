<h1>Products</h1>

<%= link_to 'Add New Product', new_product_path, class: "btn" %>

<table>
  <thead>
    <tr>
      <th>Product Name</th>
      <th>Unit</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.unit %></td>
        <td>
          <%= link_to 'Edit', edit_product_path(product), class: "btn" %>
          <%= link_to 'Delete', product_path(product), method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>